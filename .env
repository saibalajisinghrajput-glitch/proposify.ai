# ProposifyAI Environment Configuration
# Complete environment setup for development

# Server Configuration
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/proposifyai
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/proposifyai

# JWT Configuration
JWT_SECRET=proposifyai-super-secret-jwt-key-for-development-only-change-in-production-2024
JWT_EXPIRE=7d

# OpenAI Configuration
OPENAI_API_KEY=demo-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Demo Mode Configuration
ENABLE_DEMO_MODE=true
DEMO_USER_EMAIL=demo@proposifyai.com
DEMO_USER_PASSWORD=demo123

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# AI Service Configuration
AI_REQUEST_TIMEOUT=60000
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=2000

# Security
ENABLE_CORS=true
HELMET_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=uploads/

# Session Configuration
SESSION_SECRET=proposifyai-session-secret-for-development
SESSION_MAX_AGE=86400000

